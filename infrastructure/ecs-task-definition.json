{
  "family": "atlas-redeban",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "1024",
  "memory": "2048",
  "executionRoleArn": "arn:aws:iam::ACCOUNT_ID:role/atlas-ecs-execution-role",
  "taskRoleArn": "arn:aws:iam::ACCOUNT_ID:role/atlas-redeban-task-role",
  "containerDefinitions": [
    {
      "name": "atlas-redeban",
      "image": "ACCOUNT_ID.dkr.ecr.REGION.amazonaws.com/atlas-automation-redeban:latest",
      "essential": true,
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/atlas-redeban",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "environment": [
        {"name": "NODE_ENV", "value": "production"},
        {"name": "AWS_REGION", "value": "us-east-1"}
      ],
      "secrets": [
        {"name": "SITE_USERNAME", "valueFrom": "arn:aws:ssm:REGION:ACCOUNT_ID:parameter/atlas/redeban/username"},
        {"name": "SITE_PASSWORD", "valueFrom": "arn:aws:ssm:REGION:ACCOUNT_ID:parameter/atlas/redeban/password"},
        {"name": "SITE_URL", "valueFrom": "arn:aws:ssm:REGION:ACCOUNT_ID:parameter/atlas/redeban/site-url"}
      ]
    }
  ]
}
